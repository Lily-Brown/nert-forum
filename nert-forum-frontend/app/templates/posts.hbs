<h2>NERT Forum</h2>

{{#if isEditing}}

  <div>
    Post Title: {{input value=postTitle}}<br>
    Post Body: {{input type='textarea' value=postTextBody}}<br>
  </div>

  <button {{action 'save'}}>Save</button>

{{else}}

  <button {{action 'addPost'}}>Add New Post</button>

{{/if}}

{{#each model as |post|}}
  <div>
    <h3>{{post.title}}</h3>
    <div>
      <p>
        {{#link-to 'user' post.user}}{{post.user.name}}{{/link-to}}: {{post.user.neighborhood}}<br>
        {{post.createdAt}}
      </p>
    </div>
    <div>
      <p>
        {{post.textBody}}
        {{#link-to 'post' post}}Read more{{/link-to}}
      </p>
    </div>
  </div>
{{/each}}
