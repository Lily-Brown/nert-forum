{{#if isEditing}} 
  <div>
    <p>
      Title: {{input value=model.title}}<br>
      Post Body: {{textarea value=model.text_body}}<br>
    </p>
  </div>
  <div>
    <button {{action 'save'}}>Save</button>
  </div>
{{else}}
  <div>
    <p>
      <h1>{{model.title}}</h1>
      {{#link-to 'user' model.user}}{{model.user.name}}{{/link-to}}: {{model .user.neighborhood}}<br>
      {{model.created_at}}
    </p>
    <p>
      {{model.text_body}}<br>
    </p>
  </div>
  <div>
    <button {{action 'edit'}}>Edit</button>
  </div>
{{/if}}
